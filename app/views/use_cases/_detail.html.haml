


%p
  %b= " #{@use_case.id} - #{@use_case.name}"

%table#description.large-12.medium-12.columns.flows
  %thead
    %tr
      %th
        %h5 Description
  %tbody
    %tr
      %td= best_in_place @use_case, :description, :url => project_use_case_path(@use_case.project, @use_case)


%table#precondition.large-12.medium-12.columns.flows
  %thead
    %tr
      %th
        %h5 Precondition
  %tbody
    %tr
      %td= best_in_place @use_case, :pre_condition, :url => project_use_case_path(@use_case.project, @use_case)


.large-12.medium-12.columns#standard_flows.panel.flows.flow-steps
  %h5.subheader Standard Flow
  %ol.connectedSortable.connectedSource
    - @use_case.steps.where(type: 'Standard').each do |step|
      %li.blue{:"data-step-id" => step.id}= step.full_desc

  = render 'step_form', locals: {object: @step_type = 'Standard'}



.large-12.medium-12.columns#alternate_flows.panel.flows.flow-steps
  %h5.subheader Alternate Flow
  %ol.connectedSortable.connectedSource
    - @use_case.steps.where(type: 'Alternate').each do |step|
      %li.orange{:"data-step-id" => step.id}= step.full_desc

  = render 'step_form', locals: {object: @step_type = 'Alternate'}



%table#postcondition.large-12.medium-12.columns.flows
  %thead
    %tr
      %th
        %h5 Postcondition
  %tbody
    %tr
      %td= best_in_place @use_case, :post_condition, :url => project_use_case_path(@use_case.project, @use_case)



%table#openissue.large-12.medium-12.columns.flows
  %thead
    %tr
      %th
        %h5 Open Issue
  %tbody
    %tr
      %td= best_in_place @use_case, :open_issue, :display_with => :simple_format, :as => :textarea, :url => project_use_case_path(@use_case.project, @use_case)



%p
  %b State:
  %br= @use_case.state


= link_to 'Edit', edit_project_use_case_path(@use_case.project, @use_case)


