
= simple_form_for @use_case, url: project_use_case_path(project_id: @use_case.project.id, id: @use_case.id), html: { novalidate: false, multipart: true } do |f|
  - if @use_case.errors.any?
    #error_explanation
      %h2= "#{pluralize(@use_case.errors.count, "error")} prohibited this use_case from being saved:"
      %ul
        - @use_case.errors.full_messages.each do |msg|
          %li= msg

  .notice

  .new-use-case-fields.large-12.medium-12.columns{style: "background-color: aliceblue;"}
    #pieces
      %p
        %span          
          = f.simple_fields_for :steps, @use_case.steps.build do |step|
            = render 'step_fields', :f => step
          .links
            = link_to_add_association 'Add a Step', f, :steps, class: 'btn'
            = f.submit 'Save', class: 'btn link'




    