= best_in_place @use_case, :standard_flow, :display_with => :simple_format, :as => :textarea, :url => project_use_case_path(@use_case.project, @use_case)


%b Alternate flow:
= best_in_place @use_case, :alternate_flow, :display_with => :simple_format, :as => :textarea, :url => project_use_case_path(@use_case.project, @use_case)


%b Post condition:
= best_in_place @use_case, :post_condition, :display_with => :simple_format, :as => :textarea, :url => project_use_case_path(@use_case.project, @use_case)
%br

%b Open issue:
= best_in_place @use_case, :open_issue, :display_with => :simple_format, :as => :textarea, :url => project_use_case_path(@use_case.project, @use_case)


%p
  %b State:
  %br= @use_case.state


= link_to 'Edit', edit_project_use_case_path(@use_case.project, @use_case)


